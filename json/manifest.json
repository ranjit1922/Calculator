  "shortcuts": [
    {
      "name": "Scientific Mode",
      "short_name": "Scientific",
      "description": "Open scientific calculator mode",
      "url": "index.html?mode=scientific",
      "icons": [
        {
          "src": "images/other_icon/favicon.ico",
          "sizes": "any",
          "type": "image/x-icon"
        }
      ]
    },
    {
      "name": "Basic Mode",
      "short_name": "Basic",
      "description": "Open basic calculator mode",
      "url": "index.html?mode=basic",
      "icons": [
        {
          "src": "images/other_icon/favicon.ico",
          "sizes": "any",
          "type": "image/x-icon"
        }
      ]
    },
    {
      "name": "Unit Converter",
      "short_name": "Convert",
      "description": "Open unit converter",
      "url": "index.html?mode=converter",
      "icons": [
        {
          "src": "images/other_icon/favicon.ico",
          "sizes": "any",
          "type": "image/x-icon"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/Calculator/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "share_url",
      "files": [
        {
          "name": "calculations",
          "accept": ["text/plain", "text/csv"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/Calculator/open-file",
      "accept": {
        "text/csv": [".csv"],
        "text/plain": [".txt"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "protocol_handlers": [
    {
      "protocol": "web+calc",
      "url": "index.html?formula=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "capture_links": "existing-client-navigate",
  "display_mode": "standalone"
}
