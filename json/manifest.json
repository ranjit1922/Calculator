{
  "name": "Smart Calculator",
  "short_name": "Calculator",
  "description": "An advanced scientific calculator with comprehensive mathematical functions",
  "start_url": "https://ranjit1922.github.io/Calculator/",
  "scope": "/Calculator/",
  "display": "standalone",
  "theme_color": "#d38d4d",
  "background_color": "#ffffff",
  "orientation": "any",
  "lang": "en",
  "dir": "ltr",
  "handle_links": "preferred",
  "id": "?=smart_calculator",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "fullscreen",
    "minimal-ui",
    "browser"
  ],
  "categories": [
    "productivity",
    "utilities",
    "education"
  ],
